<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download__1_"
    android:textAlignment="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="97pt"
        android:layout_height="55pt"
        android:layout_margin="1dp"
        android:layout_marginEnd="184dp"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/gkl41_logo_livin___koleksilogo_com"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/headlineTextView"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Berita Terkini"
        android:textColor="@android:color/system_accent2_800"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>